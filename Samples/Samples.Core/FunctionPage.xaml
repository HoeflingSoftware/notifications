<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.FunctionPage"
             Title="Functions">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Badge" />
            <Entry Text="{Binding Badge}"
                   Keyboard="Numeric"
                   MaxLength="2" />

            <Button Text="Request Permissions (iOS only)"
                    Command="{Binding PermissionCheck}"
                    IsVisible="{Binding IsIos}" />

            <Button Text="Vibrate" Command="{Binding Vibrate}" />
            <Button Text="Send Test" Command="{Binding SendTest}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
