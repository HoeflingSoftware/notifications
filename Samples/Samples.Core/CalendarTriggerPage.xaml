<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.CalendarTriggerPage"
             Title="Calendar">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="BoxView" x:Key="Hr">
                <Setter Property="HeightRequest" Value="1" />
                <Setter Property="BackgroundColor" Value="DarkGray" />
                <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Specif Date:" />
            <Entry Text="{Binding MessageTitle}" Placeholder="Title" />
            <Entry Text="{Binding Message}" Placeholder="Message" />
            <DatePicker Date="{Binding Date}" />
            <TimePicker Time="{Binding Time}" />
            <Button Text="CreateSpecific" Command="{Binding CreateSpecific}" />

            <BoxView Style="{StaticResource Hr}" />

            <Button Text="Yearly" Command="{Binding Yearly}" />
            <Button Text="Monthly" Command="{Binding Monthly}" />
            <Button Text="Weekly" Command="{Binding Weekly}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>